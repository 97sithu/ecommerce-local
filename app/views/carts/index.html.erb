<%=render 'layouts/adminbar'%>
<div style="margin:50px 0 0 15%; position:fixed; width:60%;">
<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Totalprice</th>
      <th>Good</th>
      <th>Customer</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr scope="row">
        <td><%= cart.quantity %></td>
        <td><%= cart.totalprice %></td>
        <td><%= cart.good_id %></td>
        <td><%= cart.customer_id %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart', new_cart_path %>
