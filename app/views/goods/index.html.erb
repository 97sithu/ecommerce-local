<%=render 'layouts/adminbar'%>
<div style="margin:50px 0 0 15%; position:fixed; width:60%;">
<p id="notice"><%= notice %></p>

<h1>Goods</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Measurement</th>
      <th>Expiredate</th>
      <th>About</th>
      <th>Seller</th>
      <th>Category</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @goods.each do |good| %>
      <tr scope="row">
        <td><%= good.name %></td>
        <td><%= good.price %></td>
        <td><%= good.measurement %></td>
        <td><%= good.expireDate %></td>
        <td><%= good.about %></td>
        <td><%= good.seller_id %></td>
        <td><%= good.category_id %></td>
        <td><%= link_to 'Show', good %></td>
        <td><%= link_to 'Edit', edit_good_path(good) %></td>
        <td><%= link_to 'Destroy', good, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Good', new_good_path %>
</div>