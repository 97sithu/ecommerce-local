<%=render 'layouts/adminbar'%>
<div style="margin:50px 0 0 15%; position:fixed; width:60%;">
<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr scope="row">
       <td><%=admin.name%></td>
       <td><%=admin.email%></td>
        <td colspan='3'><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'new Admin', new_admin_registration_path %>
<%= will_paginate @admins, renderer: BootstrapPagination::Rails  %>
</div>
