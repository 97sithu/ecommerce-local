
<%=render 'layouts/adminbar'%>
<div style="margin:50px 0 0 15%; position:fixed; width:60%;">
<p id="notice"><%= notice %></p>


<h1>Sellers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Intro</th>
      <th>Profile Image</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
 

    <% @sellers.each do |seller| %>
      <tr  scope="row">
        <td><%= seller.name %></td>
        <td><%= seller.phone %></td>
        <td><%= seller.email %></td>
        <td><%= seller.address %></td>
        <td><%= seller.intro %></td>
        <td><%= image_tag seller.image, style:"height:50px;width:200px, display:block;"%></td>
        <td><%= link_to 'Show', seller %></td>
        <td><%= link_to 'Edit', edit_seller_path(seller) %></td>
        <td><%= link_to 'Destroy', seller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Seller', new_seller_path %>
<%= will_paginate @sellers, renderer: BootstrapPagination::Rails  %>
</div>
